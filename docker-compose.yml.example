services:
  app:
    build: .
    entrypoint: ./entrypoint.sh
    command: uvicorn app.app:app --host 0.0.0.0 --reload
    ports:
      - 8000:8000
    depends_on:
      - db
    volumes:
      - .:/app

  db:
    image: postgres:17
    volumes:
      - postgres_data:/var/lib/postgresql/data
    env_file:
      - ./.env
    ports:
      - 5432:5432
    healthcheck:
      test: ["CMD-SHELL", "runuser", "-u", "$POSTGRES_USER", "--", "pg_isready"]
      interval: 10s
      timeout: 5s
      retries: 30

volumes:
  postgres_data: